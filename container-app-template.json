{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "NUXT_PUBLIC_GOOGLE_MAPS_API_KEY": {
      "type": "string"
    }
  },
  "resources": [
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2024-03-01",
      "name": "mkrolik-my-places",
      "location": "Germany West Central",
      "properties": {
        "managedEnvironmentId": "/subscriptions/d019786f-a8b2-4a34-b7dd-9a55e2832402/resourceGroups/DefaultResourceGroup-DEWC/providers/Microsoft.App/managedEnvironments/managedEnvironment-DefaultResource-bb1a",
        "configuration": {
          "ingress": {
            "external": true,
            "targetPort": 3000
          }
        },
        "template": {
          "containers": [
            {
              "name": "mkrolik-my-places",
              "image": "docker.io/mateuszkrolik/my-places-social-media:latest",
              "resources": {
                "cpu": 0.5,
                "memory": "1Gi",
                "ephemeralStorage": "2Gi"
              },
              "env": [
                {
                  "name": "NUXT_PUBLIC_GOOGLE_MAPS_API_KEY",
                  "value": "[parameters('NUXT_PUBLIC_GOOGLE_MAPS_API_KEY')]"
                }
              ]
            }
          ],
          "scale": {
            "minReplicas": 0,
            "maxReplicas": 10
          }
        }
      }
    }
  ]
}
